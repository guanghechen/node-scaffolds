@font-face
  font-family: 'Tangerine'
  font-style: normal
  font-weight: 400
  // src: local('Tangerine Regular'), local('Tangerine-Regular'), url(https://fonts.gstatic.com/s/tangerine/v11/IurY6Y5j_oScZZow4VOxCZZM.woff2) format('woff2')
  src: local('Tangerine Regular'), local('Tangerine-Regular'), url(/assets/font/tangerine.woff2) format('woff2')
  unicode-range: U+0000-00FF, U+0131, U+0152-0153, U+02BB-02BC, U+02C6, U+02DA, U+02DC, U+2000-206F, U+2074, U+20AC, U+2122, U+2191, U+2193, U+2212, U+2215, U+FEFF, U+FFFD

.container
  display: flex
  align-items: center
  justify-content: center
  width: 300px
  height: 450px
  margin: auto
  background-image: url(/assets/image/background.jpeg)
  background-size: contain
  background-repeat: no-repeat

  .name
    flex: 1
    font-family: 'Tangerine', 'Comic Sans', serif
    font-size: 48px
    text-shadow: 4px 4px 4px #1a1a1a
    color: #1a1a1a
    padding: 1rem 2rem
    white-space: nowrap
    ::placeholder
      color: gray;
