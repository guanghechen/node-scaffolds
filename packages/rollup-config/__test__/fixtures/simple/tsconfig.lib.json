{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "declaration": true,
    "declarationDir": "lib/types",
    "declarationMap": false,
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    "newLine": "LF",
    "noEmit": false,
    "noEmitOnError": true,
    "resolveJsonModule": true,
    "rootDir": "src",
    "strict": true,
  },
  "include": [
    "src"
  ]
}
