{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "declaration": true,
    "declarationDir": "lib/types",
    "declarationMap": false,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "newLine": "LF",
    "noEmit": false,
    "noEmitOnError": true,
    "resolveJsonModule": true,
    "rootDir": "src",
    "sourceMap": false,
    "strict": true,
  },
  "include": ["src"]
}
